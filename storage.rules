rules_version = '2';

// By default, deny all reads and writes
service firebase.storage {
  match /b/{bucket}/o {
    
    // Allow anyone to write to the "Boss Images" folder.
    // This is safe because files are named with a unique ID (UUID),
    // preventing users from overwriting each other's files.
    // Reads are not allowed, so users cannot list all boss images.
    match /Boss Images/{allPaths=**} {
      allow write: if true;
      allow read: if false;
    }
    
    // For all other paths, require user authentication to read or write.
    // This keeps other potential folders in your storage secure.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
