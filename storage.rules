rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public write access ONLY to the Boss Images directory
    match /Boss Images/{imageId} {
      allow write: if true;
    }
    
    // All other paths in your bucket remain private and require authentication.
    // This rule will apply to any path that doesn't match the one above.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
