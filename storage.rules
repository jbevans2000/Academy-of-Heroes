
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public write access ONLY to the boss-images folder
    match /boss-images/{imageId} {
      allow write: if true;
    }

    // All other paths in the bucket remain private and require authentication for reads/writes
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
