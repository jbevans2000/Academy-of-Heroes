rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow public write access ONLY to the Boss Images folder.
    // This is secure because files are named with a random UUID,
    // preventing users from guessing filenames to overwrite them.
    match /Boss Images/{allPaths=**} {
      allow write;
      allow read; // Allow public read for the generated images.
    }

    // By default, require authentication for all other paths.
    // You can adjust this as needed for other app features.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
