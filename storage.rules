
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to write to the boss-images folder.
    // This is for the server-side image generation flow.
    match /boss-images/{imageId} {
      allow write: if true;
    }

    // Default rule: all other paths require authentication to read or write.
    // This protects student data and other potential uploads.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
