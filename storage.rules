
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /boss-images/{imageId} {
      allow write: if true;
    }
    // Allow users to write to a folder named after their own UID
    // inside a 'custom-avatars' directory.
    match /custom-avatars/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // Make all uploaded files publicly readable so they can be displayed in the app.
    match /{allPaths=**} {
      allow read;
    }
  }
}
