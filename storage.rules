rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files
    match /{allPaths=**} {
      allow read;
    }
    
    // Allow public write access ONLY to the "Boss Images" folder.
    // This is secure because we use unique IDs for filenames,
    // preventing users from overwriting each other's files.
    match /Boss Images/{imageId} {
      allow write;
    }
  }
}
